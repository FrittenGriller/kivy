            text:"hinzufügen"
            pos_hint: {"x": 0.8,"y": 0.6}
            size_hint: (0.2,0.2)
            font_size: self.width/8
            #on_release: root.Spieler_hinzu()
            on_release: root.open_Spieler_hinzu()

